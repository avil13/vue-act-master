{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ES2015"],

    "outDir": "dist/",
    "rootDir": "./src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
